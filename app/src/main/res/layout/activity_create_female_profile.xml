<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.uandi.CreateFemaleProfile"
    android:background="@drawable/female_bg">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlfview"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/select_female_image"
                android:layout_width="350dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:background="@drawable/female"

                />

            <EditText
                android:layout_below="@+id/select_female_image"
                android:layout_marginTop="20dp"
                android:id="@+id/female_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:hint="Name"
                android:textSize="28sp"/>


            <EditText
                android:layout_below="@+id/female_name"
                android:layout_marginTop="10dp"
                android:id="@+id/female_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:hint="Bio"
                android:textSize="28sp"/>
            <EditText
                android:layout_below="@+id/female_description"
                android:layout_marginTop="10dp"
                android:id="@+id/female_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="date"
                android:hint="Date of birth"
                android:textSize="28sp"/>
            <EditText
                android:layout_below="@+id/female_dob"
                android:layout_marginTop="10dp"
                android:id="@+id/female_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="textPersonName"
                android:hint="Occupation"
                android:textSize="28sp"/>
            <EditText
                android:layout_below="@+id/female_occupation"
                android:layout_marginTop="10dp"
                android:id="@+id/female_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Registered Phone Number"
                android:textSize="28sp"/>

            <EditText
                android:layout_below="@+id/female_phone"
                android:layout_marginTop="10dp"
                android:id="@+id/female_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="textPostalAddress"
                android:hint="Address"
                android:textSize="28sp"/>
            <EditText
                android:layout_below="@+id/female_address"
                android:layout_marginTop="10dp"
                android:id="@+id/female_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="#FFB6C1"
                android:inputType="textPersonName"
                android:hint="Qualification"
                android:textSize="28sp"/>




            <Button
                android:id="@+id/add_new_female"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/female_education"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:text="Upload profile"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="#DB7093"
                android:textSize="23dp"
                android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>




