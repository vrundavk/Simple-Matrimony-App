<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uandi.Registration">

    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="278dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2a"
        />
    <EditText
        android:id="@+id/register_username_input"
        android:textAlignment="center"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:hint="Name"
        android:layout_marginLeft="15dp"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFB6C1"
        android:layout_below="@+id/register_applogo"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_name"
        android:drawableStart="@drawable/ic_name"
        android:drawablePadding="5dp"/>
    <EditText
        android:id="@+id/register_userphone_input"
        android:textAlignment="center"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:hint="Phone"
        android:layout_marginLeft="15dp"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFB6C1"
        android:layout_below="@+id/register_username_input"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="5dp"/>
    <EditText
        android:id="@+id/register_email_input"
        android:textAlignment="center"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:hint="Email"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"

        android:textColor="#FFB6C1"
        android:layout_below="@+id/register_userphone_input"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_email"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="5dp"/>

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:layout_below="@+id/register_email_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:hint="Password"
        android:includeFontPadding="true"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#FFB6C1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_key"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="5dp"/>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_input"
        android:background="#FFB6C1"
        android:text="Create Account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="10dp"
         />

</RelativeLayout>
